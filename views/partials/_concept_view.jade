div(class='box hovered')
  div(class='thumb cf')
    i(class='fa fa-globe')
  div(class='content cf')
    h2(class='title-name') {{concept.payload.Name}}
      small(class='date') {{concept.payload.GenerationDate__c}}
    h3 by {{concept.payload.Author__c}}
    p {{concept.payload.Abstract__c}}
    p
      em(class='tokens green') rate: {{(concept.payload.TotalTokens__c/11.5) | number:0}}
      em(class='tokens green ctok') tokens: {{concept.payload.TotalTokens__c | number:0}}
    p Invest tokens?
      input(type='text' class='small' value='{{(concept.payload.TotalTokens__c/11.5) | number:0}}')
      em(class='tokens blue buy-stock') make deal
  div(class='details cf')
    h2 Details
    p {{concept.payload.Body__c}}
h1 Market Trend
div(id='chart')
h1 Chatter About This
div(id='search')
  input(type='text' id='message-bar' placeholder='Chatter Message')
  input(type='submit' id='message-go' value='send')