doctype html
html(ng-app='inHouseApp' class="no-js" lang="en")
  head
    meta(charset='utf8')
    meta(http-equiv="cleartype" content="on")
    meta(http-equiv="X-UA-Compatible" content="IE=edge,chrome=1")
    meta(name="viewport" content="width=device-width, initial-scale=1.0")
    title #{title}
    link(rel='stylesheet' href='/style/goldilocks/global.css' media='all')
    link(rel='stylesheet' href='/style/goldilocks/layout.css' media='all and (min-width: 33.236em)')

    //if (lt IE 9) & (!IEMobile)
      link(rel='stylesheet', href='css/example/layout.css', media='all')

    link(rel='stylesheet' href='/style/main.css')
    script(type='text/javascript' src='js/jquery.min.js')
    script(type='text/javascript' src='js/main.js')
  body(ng-controller='IndexCtrl')
    div(id='container')
      div(ng-view)
    script(type='text/javascript' src='js/angular.min.js')
    script(type='text/javascript' src='js/angular-route.min.js')
    script(type='text/javascript' src='js/angles.js')